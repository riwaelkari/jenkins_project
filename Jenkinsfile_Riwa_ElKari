pipeline {
    agent any

    environment {
        VIRTUAL_ENV = 'venv'
    }

    stages {
        stage('Setup') {
            steps {
                script {
                    // Tell Jenkins where Python is installed
                    env.PATH = "C:\\Users\\rkriw\\AppData\\Local\\Programs\\Python\\Python311;" +
                               "C:\\Users\\rkriw\\AppData\\Local\\Programs\\Python\\Python311\\Scripts;" +
                               env.PATH

                    // Create virtual environment if not exists
                    if (!fileExists("${env.WORKSPACE}\\${VIRTUAL_ENV}")) {
                        bat "python -m venv ${VIRTUAL_ENV}"
                    }

                    // Activate venv and install dependencies
                    bat "call ${VIRTUAL_ENV}\\Scripts\\activate && pip install -r requirements.txt"
                }
            }
        }

        stage('Lint') {
            steps {
                // Run flake8 to check code style
                bat "call ${VIRTUAL_ENV}\\Scripts\\activate && flake8 app.py"
            }
        }

        stage('Test') {
            steps {
                // Run unit tests
                bat "call ${VIRTUAL_ENV}\\Scripts\\activate && python -m unittest discover -s tests"
            }
        }

        //  NEW STAGE 1: Coverage
        stage('Coverage') {
            steps {
                // Run code coverage analysis and generate report
                bat """
                call ${VIRTUAL_ENV}\\Scripts\\activate
                coverage run -m unittest discover -s tests
                coverage report -m
                coverage html -d coverage_html
                """
            }
        }

        // NEW STAGE 2: Security Scan
        stage('Security Scan') {
            steps {
                // Run Bandit security scan (UTF-8 fix)
                bat "set PYTHONIOENCODING=utf-8 && call ${VIRTUAL_ENV}\\Scripts\\activate && bandit -r . -x venv --quiet || exit 0"
            }
        }

        stage('Deploy') {
            steps {
                // Implement a simple local deployment
                bat """
                if not exist deploy mkdir deploy
                copy /Y app.py deploy\\
                copy /Y requirements.txt deploy\\
                call ${VIRTUAL_ENV}\\Scripts\\activate && python deploy\\app.py > deploy\\output.txt
                """
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
