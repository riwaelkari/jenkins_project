pipeline {
    agent any

    environment {
        VIRTUAL_ENV = 'venv'
    }

    stages {
        stage('Setup') {
            steps {
                script {
                    // Tell Jenkins where Python is installed
                    env.PATH = "C:\\Users\\rkriw\\AppData\\Local\\Programs\\Python\\Python311;" +
                               "C:\\Users\\rkriw\\AppData\\Local\\Programs\\Python\\Python311\\Scripts;" +
                               env.PATH

                    // Create virtual environment if not exists
                    if (!fileExists("${env.WORKSPACE}\\${VIRTUAL_ENV}")) {
                        bat "python -m venv ${VIRTUAL_ENV}"
                    }

                    // Activate venv and install dependencies
                    bat "call ${VIRTUAL_ENV}\\Scripts\\activate && pip install -r requirements.txt"
                }
            }
        }

        stage('Lint') {
            steps {
                // Run flake8 to check code style
                bat "call ${VIRTUAL_ENV}\\Scripts\\activate && flake8 app.py"
            }
        }

        stage('Test') {
            steps {
                // Run unit tests
                bat "call ${VIRTUAL_ENV}\\Scripts\\activate && python -m unittest discover -s tests"
            }
        }

        stage('Deploy') {
            steps {
                bat 'echo Deploying application... '
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
